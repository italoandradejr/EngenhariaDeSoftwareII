@model IEnumerable<LojaCupcakes.Models.Cupcake>
@{
    ViewData["Title"] = "Vitrine";
}

<div class="text-center">
    <h1 class="display-4">Nossos Cupcakes</h1>
</div>

<div class="row">
    @foreach (var cupcake in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <img src="@(cupcake.Imagem ?? "/images/placeholder.png")" class="card-img-top" alt="@cupcake.Nome" style="height: 200px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@cupcake.Nome</h5>
                    <p class="card-text">@cupcake.Sabor</p>
                    <h6 class="card-subtitle mb-2 text-success">@cupcake.Preco.ToString("C")</h6>

                    <button class="btn btn-primary mt-auto"
                            onclick="adicionarAoCarrinho(@cupcake.Id, '@cupcake.Nome', @cupcake.Preco.ToString().Replace(",", "."))">
                        Adicionar ao Carrinho
                    </button>
                </div>
            </div>
        </div>
    }
</div>