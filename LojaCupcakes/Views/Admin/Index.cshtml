@model IEnumerable<LojaCupcakes.Models.Cupcake>
@{
    ViewData["Title"] = "Painel do Administrador";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar Novo Cupcake</a>
</p>

<h3>Gerenciar Cupcakes</h3>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@item.Preco.ToString("C")</td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Tem certeza que deseja excluir?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>