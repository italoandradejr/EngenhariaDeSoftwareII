@model IEnumerable<LojaCupcakes.Models.Pedido>
@{
    ViewData["Title"] = "Gerenciar Pedidos";
    // Lista de status para o dropdown
    var statusList = new List<string> { "Processando", "Enviado", "Entregue", "Cancelado" };
}

<h1>@ViewData["Title"] (HU12)</h1>
<p>Visualize e gerencie todos os pedidos recebidos pela loja.</p>
<hr />

@if (Model == null || !Model.Any())
{
    <p>Nenhum pedido foi realizado ainda.</p>
}
else
{
    @foreach (var pedido in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <div>
                        <strong>Pedido #@pedido.Id</strong>
                    </div>
                    <div>
                        <strong>Data:</strong> @pedido.DataPedido.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>

            <div class="card-body">
                <p><strong>Cliente:</strong> @pedido.Cliente?.Nome (@pedido.Cliente?.Email)</p>

                <h5 class="card-title">Itens do Pedido</h5>
                <table class="table table-sm table-striped">
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th>Preço Unitário</th>
                            <th>Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in pedido.ItensPedido)
                        {
                            <tr>
                                <td>@item.Cupcake?.Nome</td>
                                <td>@item.PrecoUnitario.ToString("C")</td>
                                <td>@item.Quantidade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-end">
                        <strong>Total:</strong>
                        <span class="text-success h5">@pedido.ValorTotal.ToString("C")</span>
                    </div>

                    <div>
                        <form asp-action="AtualizarStatusPedido" method="post" class="d-flex">
                            <input type="hidden" name="pedidoId" value="@pedido.Id" />
                            <select name="status" class="form-select form-select-sm me-2" style="width: 150px;">
                                @foreach (var status in statusList)
                                {
                                    <option value="@status" selected="@(pedido.Status == status)">@status</option>
                                }
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">Atualizar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}